@model WebApplication3.Models.AparatKategoria

@{
    ViewData["Title"] = "Create";
}

<h1 class="bg-info text-white">Create</h1>

<h4>Camera Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpperCategoryId" class="control-label"></label>
                <select asp-for="UpperCategoryId" class ="form-control" asp-items="ViewBag.UpperCategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <span>@ViewBag.DuplicateMessage</span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
