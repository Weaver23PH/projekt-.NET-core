@using WebApplication3.Models;
@using WebApplication3.Code;
@using WebApplication3.Data;
@model WebApplication3.Models.EquipmentBag

@{
    ViewData["Title"] = "Create";
    List<string> ObiektywBagnetList = new List<string>();
    List<string> AparatBagnetList = new List<string>();
    List<string> IntersectBagnetList = new List<string>();

}

<h1>Complete</h1>

<h4>Equipment bag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

            </div>
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Mount
                    </th>
                </tr>

                @foreach (var item in Model.AparatyEquippped)
                {
                    if (item.Aparat.Bagnet.Typ != null)
                    {
                        AparatBagnetList.Add(item.Aparat.Bagnet.Typ);
                    }
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aparat.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AparatAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aparat.Waga)
                        </td>

                    </tr>
                }
                @foreach (var item in Model.ObiektywyEquipped)
                {
                    if (item.Obiektyw.Bagnet.Typ != null)
                    {
                        ObiektywBagnetList.Add(item.Obiektyw.Bagnet.Typ);
                    }
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Obiektyw.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ObiektywAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Obiektyw.Waga)
                        </td>

                    </tr>
                }
            </table>
            <h2> Total weight of the bag: @Model.TotalWeight() grams </h2>
            @{IntersectBagnetList = ObiektywBagnetList.Intersect(AparatBagnetList).ToList<string>();
                if (IntersectBagnetList.Count() > 0)
                {
                    <div class="form-group">
                        <h2>Your equipment is mismatched on the {@IntersectBagnetList.ToString()} mount!</h2>
                    </div>
                }
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
