@using WebApplication3.Models;
@using WebApplication3.Code;
@using WebApplication3.Data;
@model WebApplication3.Models.EquipmentBag

@{
    ViewData["Title"] = "Create";


}

<h1>Complete</h1>

<h4>Equipment bag</h4>
<hr />
<div class="row">
    <div class="col-md-7">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

            </div>
            <table class="table">
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Weight
                    </th>
                </tr>

                @foreach (var item in Model.AparatyEquippped)
                {

                    <tr>
                        <td>
                            Camera : @Html.DisplayFor(modelItem => item.Aparat.Producent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aparat.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AparatAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aparat.Waga)
                        </td>

                    </tr>
                }
                @foreach (var item in Model.ObiektywyEquipped)
                {

                    <tr>
                        <td>
                            Lens : @Html.DisplayFor(modelItem => item.Obiektyw.Producent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Obiektyw.Model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ObiektywAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Obiektyw.Waga)
                        </td>

                    </tr>
                }
            </table>
            <h2> Total weight of the bag: @Model.TotalWeight() grams </h2>
            @if (ViewBag.MissingCameraMount != null)
            {
                <h3>  @ViewBag.MissingCameraMount </h3>}
            @if (ViewBag.MissingLensMount != null)
            {
                <h3>  @ViewBag.MissingLensMount </h3>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back To List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
